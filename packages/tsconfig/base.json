{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "compilerOptions": {
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "CommonJS",
    "lib": [
      "es2017",
      "dom"
    ],
    "target": "es5",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "isolatedModules": true,
    "strict": true,
    "incremental": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "./node_modules/*"
  ]
}